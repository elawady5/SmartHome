<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macy.smarthome" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.macy.smarthome.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AIAuth"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.macy.smarthome.AIAuth" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
        android:name=".ControllingActuators"
        android:label="@string/app_name" >
        </activity>


        <activity
            android:name=".ReadingSensors"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".LEDs"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
